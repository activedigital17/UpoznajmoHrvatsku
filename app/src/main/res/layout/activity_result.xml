<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity"
    android:background="@drawable/background_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:layout_weight="1"
        android:text="Čestitamo, završio si kviz!"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/highscore_tv"
        android:textSize="26sp"
        android:layout_weight="0.5"
        android:gravity="center"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        tools:text="test"
        android:layout_weight="0.3"
        android:id="@+id/correct_answers_display"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PROMJENI IGRAČA"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:id="@+id/resultFinish_btn"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/submit_btn"
        />

    <Button
        android:id="@+id/playAgain_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/submit_btn"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="igraj ponovno"
        android:textColor="@android:color/white"
        android:layout_marginBottom="100dp"
        android:textSize="24sp" />


</LinearLayout>